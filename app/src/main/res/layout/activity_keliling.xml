<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.mobile.belajar_mvvm.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        tools:context=".view.Keliling_act">

    <EditText
        android:text="@={viewmodel.etSisi1}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Sisi 1"/>

    <EditText
        android:text="@={viewmodel.etSisi2}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Sisi 2"/>

    <EditText
        android:text="@={viewmodel.etSisi3}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Sisi 3"/>

    <Button
        android:onClick="@{()-> viewmodel.btnKel(context)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil keliling segitiga"/>

</LinearLayout>

</layout>